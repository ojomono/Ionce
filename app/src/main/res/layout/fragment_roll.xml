<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rollViewModel"
            type="com.ojomono.ionce.ui.roll.RollViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".ui.roll.RollFragment">

        <TextView
            android:id="@+id/text_preface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:textColor="@color/colorOnBackground"
            android:textSize="@dimen/roll_preface_text_size"
            android:text="@string/roll_preface_text" />

        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorOnBackground"
            android:textSize="@dimen/roll_tale_text_size"
            app:hintText="@{rollViewModel.tales}"
            app:hintVisibility="@{rollViewModel.text}"
            tools:text="@string/roll_hint_default_text"
            tools:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_tale"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            app:taleVisibility="@{rollViewModel.text}"
            tools:visibility="visible">

            <TextView
                android:id="@+id/text_tale"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/roll_tale_text_size"
                android:text="@{rollViewModel.text}"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_roll"
            android:layout_width="@dimen/roll_button_size"
            android:layout_height="@dimen/roll_button_size"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:background="@drawable/background_roll_button"
            android:onClick="@{() -> rollViewModel.onRoll()}"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/roll_button_text_size"
            android:text="@string/roll_button_text"
            tools:text="ROLL!"/>

    </LinearLayout>
</layout>