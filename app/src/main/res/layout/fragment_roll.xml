<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ojomono.ionce.ui.roll.RollViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <TextView
            android:id="@+id/text_tales_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:textColor="@color/colorOnPrimary"
            android:textSize="@dimen/tales_hint_text_size"
            android:text="@string/roll_no_tales_text"
            android:gravity="center"
            app:noTalesTextVisibility="@{viewModel.tales}"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:rollScreenVisibility="@{viewModel.tales}"
            tools:context=".ui.roll.RollFragment"
            tools:visibility="gone">

            <TextView
                android:id="@+id/text_preface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:textColor="@color/colorOnPrimary"
                android:textSize="@dimen/roll_preface_text_size"
                android:text="@string/roll_preface_text" />

            <TextView
                android:id="@+id/text_roll_hint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorOnPrimary"
                android:textSize="@dimen/roll_hint_text_size"
                android:gravity="center"
                android:text="@string/roll_hint_text"
                app:hintTextVisibility="@{viewModel.text}"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_tale"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                app:taleCardVisibility="@{viewModel.text}"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/text_tale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/roll_tale_text_size"
                    android:text="@{viewModel.text}"
                    tools:text="I went there!" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_roll"
                android:layout_width="@dimen/roll_button_size"
                android:layout_height="@dimen/roll_button_size"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:background="@drawable/bg_circle_ripple"
                android:onClick="@{() -> viewModel.onRoll()}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/roll_button_text_size"
                android:text="@string/roll_button_text"
                tools:text="ROLL!" />

        </LinearLayout>

    </RelativeLayout>
</layout>