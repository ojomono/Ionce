<?xml version="1.0" encoding="utf-8"?>
<!-- Copied from github project 'android-profile-ui' by 'karunstha': https://github.com/karunstha/android-profile-ui/blob/master/app/src/main/res/layout/activity_main.xml-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="profileViewModel"
            type="com.ojomono.ionce.ui.profile.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ojomono.ionce.MainActivity">

        <RelativeLayout
            android:id="@+id/relative_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient">

            <RelativeLayout
                android:id="@+id/relative_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_border">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="9dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_circle_solid"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_user_image_content_description"
                    app:userPhotoSrc="@{profileViewModel.user}"
                    tools:src="@drawable/ic_user" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_image"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/profile_name_padding_bottom"
                android:gravity="center"
                android:background="@drawable/bg_ripple"
                android:onClick="@{() -> profileViewModel.onEditName()}">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/profile_icons_sizes"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/onPrimary"
                    android:textSize="32sp"
                    android:text="@{profileViewModel.user.displayName}"
                    tools:text="Joey Tribbiani" />

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_name_content_description" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/profile_icons_sizes"
                android:layout_height="@dimen/profile_icons_sizes"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings_white_24"
                android:contentDescription="@string/profile_settings_icon_content_description"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_header"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linear_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_email_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/onSurface"
                        android:textSize="18sp"
                        android:text="@{profileViewModel.user.email}"
                        tools:text="joey@sharenofood.com" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_phone_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/onSurface"
                        android:textSize="18sp"
                        android:text="@{profileViewModel.user.phoneNumber}"
                        tools:text="+1-202-555-0157" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_twitter_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/onSurface"
                        android:textSize="18sp"
                        app:twitterLinkText="@{profileViewModel.user}"
                        tools:text="\@joeytribbiani" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_facebook_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/onSurface"
                        android:textSize="18sp"
                        app:facebookLinkText="@{profileViewModel.user}"
                        tools:text="facebook.com/joeytrib" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/grey" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/profile_sign_out_button_text"
                android:onClick="@{() -> profileViewModel.onSignOut()}"/>

        </LinearLayout>
    </RelativeLayout>
</layout>