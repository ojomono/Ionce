<?xml version="1.0" encoding="utf-8"?>
<!-- Copied from github project 'android-profile-ui' by 'karunstha': https://github.com/karunstha/android-profile-ui/blob/master/app/src/main/res/layout/activity_main.xml-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ojomono.ionce.ui.profile.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ojomono.ionce.MainActivity">

        <RelativeLayout
            android:id="@+id/relative_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient">

            <RelativeLayout
                android:id="@+id/relative_image"
                android:layout_width="@dimen/profile_relative_image_size"
                android:layout_height="@dimen/profile_relative_image_size"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_border"
                android:onClick="@{() -> viewModel.onPictureClicked()}">

                <ImageView
                    android:id="@+id/image_profile_picture"
                    android:layout_width="@dimen/profile_image_size"
                    android:layout_height="@dimen/profile_image_size"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_circle_solid_white"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_user_image_content_description"
                    app:userPhotoSrc="@{viewModel.user}"
                    tools:src="@drawable/ic_user" />

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_black_24"
                    android:background="@drawable/bg_circle_solid_accent"
                    android:contentDescription="@string/profile_edit_photo_content_description" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_image"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/profile_name_padding_bottom"
                android:gravity="center"
                android:background="@drawable/bg_ripple"
                android:onClick="@{() -> viewModel.onNameClicked()}">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/profile_icons_sizes"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="32sp"
                    android:text="@{viewModel.user.displayName}"
                    tools:text="Joey Tribbiani" />

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_name_content_description" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/profile_icons_sizes"
                android:layout_height="@dimen/profile_icons_sizes"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings_white_24"
                android:contentDescription="@string/profile_settings_icon_content_description"
                android:onClick="@{(view) -> viewModel.onSettingsClicked(view)}" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_fields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_header"
            android:orientation="vertical"
            android:gravity="center">

            <!-- TODO change to list holding 5 identical "field item" layouts.
                    Fields differ in: tile-text, field-text, icon-contentDescription-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/profile_fields_padding_horizontal"
                android:paddingTop="@dimen/profile_fields_padding_top"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@drawable/bg_ripple">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_email_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="18sp"
                        android:text="@{viewModel.user.email}"
                        tools:text="joey@sharenofood.com" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_email_content_description"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/profile_fields_padding_horizontal"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/profile_fields_padding_horizontal"
                android:paddingTop="@dimen/profile_fields_padding_top"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@drawable/bg_ripple">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_phone_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="18sp"
                        android:text="@{viewModel.user.phoneNumber}"
                        tools:text="+1-202-555-0157" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_phone_content_description"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/profile_fields_padding_horizontal"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/profile_fields_padding_horizontal"
                android:paddingTop="@dimen/profile_fields_padding_top"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@drawable/bg_ripple">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_twitter_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="18sp"
                        app:twitterLinkText="@{viewModel.user}"
                        tools:text="\@joeytribbiani" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_twitter_content_description"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/profile_fields_padding_horizontal"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/profile_fields_padding_horizontal"
                android:paddingTop="@dimen/profile_fields_padding_top"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@drawable/bg_ripple">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_facebook_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="18sp"
                        app:facebookLinkText="@{viewModel.user}"
                        tools:text="facebook.com/joeytrib" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_facebook_content_description"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/profile_fields_padding_horizontal"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/profile_fields_padding_horizontal"
                android:paddingTop="@dimen/profile_fields_padding_top"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@drawable/bg_ripple">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_google_header_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="18sp"
                        app:googleLinkText="@{viewModel.user}"
                        tools:text="Joey Tribbiani" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/profile_icons_sizes"
                    android:layout_height="@dimen/profile_icons_sizes"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_accent_24"
                    android:contentDescription="@string/profile_edit_google_content_description"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/profile_fields_padding_horizontal"
                android:background="@color/gray" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>
</layout>