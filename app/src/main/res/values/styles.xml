<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <!-- Full-screen dialogs theme -->
    <style name="AppTheme.FullScreenDialog" parent="AppTheme.FullScreenDialogExit">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <!-- Theme without the enter animation to allow changing to it after dialog is shown in order to
     avoid animation on every back press from inner dialogs -->
    <style name="AppTheme.FullScreenDialogExit">
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>