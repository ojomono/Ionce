<resources>
    <!-- Base application theme. - SET SEPARATELY ON EACH ACTIVITY IN MANIFEST!
     because if application theme is child of "Theme.MaterialComponents.*", sign-in screen buttons
     lose their designs. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Sign-in screen theme - SET AS APPLICATION THEME IN MANIFEST!
    because otherwise sign-in screen buttons lose their designs. -->
    <style name="AppTheme.SignInScreen" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="materialButtonStyle">@style/FirebaseUI.Button</item>-->
        <item name="colorPrimary">@color/design_dark_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_dark_default_color_primary_variant</item>
        <item name="colorAccent">@color/design_dark_default_color_secondary</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <!-- Full-screen dialogs theme -->
    <style name="AppTheme.FullScreenDialog" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Theme without the enter animation to allow changing to it after dialog is shown in order to
     avoid animation on every back press from inner dialogs -->
    <style name="AppTheme.FullScreenDialog.NoEnterAnim" parent="AppTheme.FullScreenDialog">
        <item name="android:windowEnterAnimation">@null</item>
    </style>
</resources>